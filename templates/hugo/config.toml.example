#
# Hugo configuration for well-known resources
# Add these settings to your hugo.toml or config.toml

# Output formats for well-known resources
[outputFormats]
  [outputFormats.security-txt]
    baseName = "security"
    isPlainText = true
    mediaType = "text/plain"
    path = ".well-known"

  [outputFormats.ai-txt]
    baseName = "ai"
    isPlainText = true
    mediaType = "text/plain"
    path = ".well-known"

  [outputFormats.humans-txt]
    baseName = "humans"
    isPlainText = true
    mediaType = "text/plain"
    path = ".well-known"

# Well-known resource configuration
[params.security]
  contact = [
    "mailto:security@example.com",
    "https://example.com/security/report"
  ]
  expires = "2026-12-31T23:59:59Z"
  encryption = "https://example.com/.well-known/pgp-key.txt"
  acknowledgments = "https://example.com/security/thanks"
  preferredLanguages = ["en"]
  canonical = "https://example.com/.well-known/security.txt"
  policy = "https://example.com/security/policy"
  hiring = "https://example.com/careers/security"

[params.ai]
  policy = "https://example.com/ai-policy"
  trainingOptOut = true
  contact = "mailto:ai@example.com"

[params.humans]
  [[params.humans.team]]
    name = "Your Name"
    role = "Developer"
    location = "Earth"
