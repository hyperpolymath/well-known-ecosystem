#
# Zola configuration for well-known resources
# Add these settings to your config.toml

base_url = "https://example.com"

[extra.security]
contact = [
  "mailto:security@example.com",
  "https://example.com/security/report"
]
expires = "2026-12-31T23:59:59Z"
encryption = "https://example.com/.well-known/pgp-key.txt"
acknowledgments = "https://example.com/security/thanks"
preferred_languages = ["en"]
canonical = "https://example.com/.well-known/security.txt"
policy = "https://example.com/security/policy"
hiring = "https://example.com/careers/security"

[extra.ai]
policy = "https://example.com/ai-policy"
training_opt_out = true
contact = "mailto:ai@example.com"

[extra.humans]
[[extra.humans.team]]
name = "Your Name"
role = "Developer"
location = "Earth"

[[extra.humans.thanks]]
name = "Open Source Community"
role = "Contributors"
